      <url>http://develop.metalcon.de:8080/mvn/</url>
    </repository>
  </repositories>

  <properties>
    <metalcon.api.version>0.1.1</metalcon.api.version>
    <metalcon.static-data-delivery-server-api.version>0.1.2</metalcon.static-data-delivery-server-api.version>
